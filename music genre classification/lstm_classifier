import json
import numpy as np
from sklearn.model_selection import train_test_split
import tensorflow as tf
from tensorflow import keras
import matplotlib.pyplot as plt

DATAPATH = "dataset.json"  # each track is 10s long

def load_data(datapath):
    with open(datapath, "r") as fp:
        data = json.load(fp)

    # convert lists into numpy arrays because labels and mfccs are stored as lists in json
    X = np.array(data["mfcc"])
    y = np.array(data["labels"])

    return X, y

def prepare_datasets(test_size, validation_size):

    #load data
    X, y = load_data(DATAPATH)
    #create train validation split
    X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=test_size)
    X_train, X_validation, y_train, y_validation = train_test_split(X_train, y_train, test_size=validation_size)
    # new dimension is not needed for lstm

    return X_train, X_test, X_validation, y_train, y_test, y_validation

def build_model(input_shape):
    #create model. rnnlstm 
    model = keras.Sequential()
    # 2 LSTM layers
    model.add(keras.layers.LSTM(64, input_shape=input_shape, return_sequences=True))#return sequences is for sequence to sequence
    #we pass this sequence to next lstm layer
    model.add(keras.layers.LSTM(64)) #by default return_sequences is false

    #dense layer
    model.add(keras.layers.Dense(64, activation='relu'))
    model.add(keras.layers.Dropout(0.3)) #to avoid overfitting
    model.add(keras.layers.Dense(10,activation='softmax')) #10 genres

    return model
def predict(model, X, y):
    X = X[np.newaxis,...] #add a 4th dimension
    #prediction is a 2d array. First dimension is num_samples(1 here) second is num_classes(10 here)
    prediction = model.predict(X) #X is a 3d array (130,13,1)but model expects 4d array which is (1 (num_samples),130,13,1)
    # extract index with highest probability
    predicted_index = np.argmax(prediction, axis=1)
    print("Expected index: {}, Predicted index: {}".format(y, predicted_index))

def plot_history(history):
    """Plots accuracy/loss for training/validation set as a function of the epochs

        :param history: Training history of model
        :return:
    """

    fig, axs = plt.subplots(2)

    # create accuracy sublpot
    axs[0].plot(history.history["accuracy"], label="train accuracy")
    axs[0].plot(history.history["val_accuracy"], label="test accuracy")
    axs[0].set_ylabel("Accuracy")
    axs[0].legend(loc="lower right")
    axs[0].set_title("Accuracy eval")

    # create error sublpot
    axs[1].plot(history.history["loss"], label="train error")
    axs[1].plot(history.history["val_loss"], label="test error")
    axs[1].set_ylabel("Error")
    axs[1].set_xlabel("Epoch")
    axs[1].legend(loc="upper right")
    axs[1].set_title("Error eval")

    plt.show()

if __name__ == "__main__":
    # create train, validation and test sets..
    # Just test set is not enough. Keep the validation set once all training and testing is done.
    # We use validation data to evaluate the model.
    X_train, X_test, X_validation, y_train, y_test, y_validation =   prepare_datasets(test_size=0.25, validation_size=0.2)

    input_shape = (X_train.shape[1], X_train.shape[2])#130,13
    # build the CNN model
    model = build_model(input_shape)
    # compile the model 
    optimizer = keras.optimizers.Adam(learning_rate=0.0001)
    model.compile(optimizer=optimizer,
                  loss='sparse_categorical_crossentropy',
                  metrics=['accuracy'])
    # train the model
    history = model.fit(X_train, y_train, 
              validation_data=(X_validation, y_validation),
              epochs=30,
              batch_size=32)
    
    plot_history(history)
    # evaluate the CNN on the test set

    test_error, test_accuracy = model.evaluate(X_test, y_test, verbose=1)
    print("Accuracy on test set is {}".format(test_accuracy))
    #  make prediction on a sample
    X = X_test[100]
    y = y_test[100]
    predict(model,X,y)
    